<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/problemlist_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="left"
                    android:fontFamily="@font/sailec_medium"
                    android:text="Given two numbers jdk number w their sum sljdfj sdlkfj fskjkdflksjdf  ksjldj f sdkfjs "
                    android:textColor="@color/text"
                    android:layout_weight="0.20"
                    android:textSize="14sp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/problem_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:layout_marginRight="3dp"
                    android:focusableInTouchMode="false"
                    android:layout_weight="0.80"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/background"
                    android:gravity="center_horizontal" />

            </LinearLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                tools:ignore="MissingConstraints">

            </com.google.android.material.chip.ChipGroup>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>